{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
    {% if error %}
        <div>{{ error }}</div>
    {% endif %}
    
    <form action="{{ path("fos_user_security_check") }}" method="post" class="form-stacked">
        <fieldset>
            <legend>Login</legend>

            <div class="clearfix">
                <label for="username">Username:</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" />
            </div>
    
            <div class="clearfix">
                <label for="password">Password</label>
                <input type="password" id="password" name="_password" />
            </div>
    
            <div class="clearfix">
                <label for="remember_me">Remember Me</label>
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            </div>
    
            <div class="clearfix">
                <h4>Did you forget your password? <a href="{{ path('fos_user_resetting_request') }}">Click here to reset your password</a></h4>
            </div>
    
            <div class="actions">
                <input type="submit" id="_submit" name="_submit" class="btn primary" value="Login" />
            </div>
        </fieldset>
    </form>
{% endblock fos_user_content %}
